<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/liandong_title"
    >

    <TextView
        android:id="@+id/ld_title_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/start_number"
        android:textSize="@dimen/title_TextView"
        android:layout_gravity="center_vertical"
        tools:ignore="RelativeOverlap" />


    <TextView
        android:id="@+id/ld_title_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/ld_title_number"
        android:layout_marginStart="@dimen/title_TextView"
        android:textSize="@dimen/title_TextView"
        android:layout_gravity="center_vertical"
        tools:ignore="RelativeOverlap" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:id="@+id/ld_title_image"
        android:src="@drawable/expander_open_holo_light"
        tools:ignore="ContentDescription" />
</RelativeLayout>