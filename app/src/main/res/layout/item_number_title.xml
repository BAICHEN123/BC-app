<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/e_title"
    >

    <TextView
        android:id="@+id/item_title_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/start_number"
        android:textSize="@dimen/title_TextView"
        android:layout_gravity="center_vertical"
        tools:ignore="RelativeOverlap" />

    <Button
        android:id="@+id/item_title_data"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_toEndOf="@+id/item_title_number"
        android:layout_marginStart="@dimen/number_name"
        android:layout_centerVertical="true"
        android:background="@drawable/bai_di_button"
        android:focusable="false"
        android:textAllCaps="false"
        android:textSize="@dimen/title_TextView"
        tools:ignore="RelativeOverlap" />

    <TextView
        android:id="@+id/item_title_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/open_items_image"

        android:layout_gravity="center_vertical"
        android:textSize="@dimen/title_TextView"
        tools:ignore="RelativeOverlap" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:id="@+id/open_items_image"
        android:src="@drawable/expander_open_holo_light"
        tools:ignore="ContentDescription" />
</RelativeLayout>